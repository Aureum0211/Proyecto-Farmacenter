<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.farmacia.controller.ConsultarController"
            style="-fx-background-color: #f4f7f6;">
   
   <!-- BorderPane centrado que ocupa toda la pantalla -->
   <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      
      <top>
         <!-- HEADER -->
         <VBox BorderPane.alignment="CENTER">
            <children>
               <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="15.0" 
                     style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 2 0;">
                  <children>
                     <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../../img/logo.jpg" />
                        </image>
                     </ImageView>
                     <Text fill="#63b9aa" strokeType="OUTSIDE" strokeWidth="0.0" text="FARMA CENTER">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Text>
                     
                     <!-- Spacer que empuja los controles a la derecha -->
                     <HBox HBox.hgrow="ALWAYS" />
                     
                     <Label fx:id="lblUsuario" text="Usuario: Cliente" textFill="#4aa48e">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                     <Button mnemonicParsing="false" onAction="#volverMenu" 
                             style="-fx-background-color: #5bc0de; -fx-text-fill: white;" text="Volver">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Button>
                  </children>
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
               </HBox>
               
               <!-- BARRA DE BÚSQUEDA Y FILTROS -->
               <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="15.0" 
                     style="-fx-background-color: white;">
                  <children>
                     <Label text="Buscar:" textFill="#4aa48e">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </Label>
                     <TextField fx:id="txtBuscar" onKeyReleased="#buscarMedicamento" 
                                prefHeight="35.0" prefWidth="300.0" 
                                promptText="Nombre del medicamento..." 
                                style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;">
                        <font>
                           <Font size="12.0" />
                        </font>
                     </TextField>
                     
                     <Label text="Filtrar por tipo:" textFill="#4aa48e">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                        <HBox.margin>
                           <Insets left="20.0" />
                        </HBox.margin>
                     </Label>
                     <ComboBox fx:id="cmbTipo" onAction="#filtrarPorTipo" 
                               prefHeight="35.0" prefWidth="180.0" 
                               promptText="Todos" style="-fx-background-radius: 5;" />
                     
                     <Button mnemonicParsing="false" onAction="#limpiarFiltros" 
                             prefHeight="35.0" prefWidth="120.0" 
                             style="-fx-background-color: #f0ad4e; -fx-background-radius: 5; -fx-text-fill: white;" 
                             text="Limpiar Filtros">
                        <font>
                           <Font name="System Bold" size="11.0" />
                        </font>
                        <HBox.margin>
                           <Insets left="20.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                  </padding>
               </HBox>
            </children>
         </VBox>
      </top>
      
      <center>
         <!-- CONTENEDOR PRINCIPAL CENTRADO -->
         <HBox spacing="20.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
               <Insets top="20.0" bottom="20.0" left="30.0" right="30.0" />
            </padding>
            
            <children>
               <!-- TABLA DE MEDICAMENTOS -->
               <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                  <children>
                     <Label text="Lista de Medicamentos Disponibles" textFill="#4aa48e">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Label>
                     
                     <TableView fx:id="tablaMedicamentos" prefWidth="600.0" VBox.vgrow="ALWAYS"
                                style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <columns>
                           <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre" />
                           <TableColumn fx:id="colTipo" prefWidth="120.0" text="Tipo" />
                           <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
                           <TableColumn fx:id="colOrden" prefWidth="100.0" text="Req. Orden" />
                           <TableColumn fx:id="colDosis" prefWidth="119.0" text="Dosis" />
                        </columns>
                     </TableView>
                  </children>
               </VBox>
               
               <!-- PANEL DE DETALLES -->
               <VBox spacing="12.0" prefWidth="380.0" maxWidth="400.0"
                     style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  <children>
                     <Label text="Detalles del Medicamento" textFill="#4aa48e">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Label>
                     
                     <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                        <children>
                           <Label text="Nombre Comercial:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <Label fx:id="lblNombreComercial" text="-" wrapText="true">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </Label>
                           
                           <Label text="Nombre Genérico:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <Label fx:id="lblNombreGenerico" text="-" wrapText="true">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </Label>
                           
                           <Label text="Forma Farmacéutica:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <Label fx:id="lblForma" text="-" wrapText="true">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </Label>
                           
                           <Label text="Frecuencia y Duración:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <Label fx:id="lblFrecuencia" text="-" wrapText="true">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </Label>
                           
                           <Label text="Indicaciones:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                              <VBox.margin>
                                 <Insets top="5.0" />
                              </VBox.margin>
                           </Label>
                           <TextArea fx:id="txtIndicaciones" editable="false" 
                                     prefHeight="80.0" wrapText="true">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </TextArea>
                           
                           <Label text="Advertencias:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <TextArea fx:id="txtAdvertencias" editable="false" 
                                     prefHeight="80.0" wrapText="true">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </TextArea>
                        </children>
                     </VBox>
                  </children>
               </VBox>
            </children>
         </HBox>
      </center>
   </BorderPane>
</AnchorPane>